<html>
    <head>
        <title>Library</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <style>
            .highlight {
                color: deeppink;
            }

            #suggestions {
                border: 1px solid #dfe2e6;
                border-bottom: none;
                border-radius: 5px;
            }

            .suggestion {
                height: 40px;
                border: 1px solid #dfe2e6;
                border-top: none;
                border-left: none;
                border-right: none;
                padding-left: 10px;
            }

            .suggestion:hover {
                background-color: #e7e7e7;
            }

            ul {
                list-style-type: none;
            }
        </style>
        <script>
            function submit() {
                document.getElementById('form').submit();
            }
        </script>
    </head>
    <body>
        <div class="container">
            <div>
                <h2 onclick="window.location='/'">Awesome Library</h2>
                <form id="form" action="/books">
                    <div class="mb-3">
                        <input
                            class="form-control"
                            id="inputSearch"
                            name="search"
                            placeholder="Search"
                            value="{{ queryString }}"
                            autofocus
                            autocomplete="false"
                            onfocus="var tmp=this.value; this.value=''; this.value=tmp"
                            oninput="submit()"
                        >
                        <div id="suggestions">
                            {% for suggestion in suggestions %}
                                <div
                                    class="suggestion"
                                    tabindex="{{ loop.index0 }}"
                                    onclick="document.getElementById('inputSearch').value = this.textContent; submit()"
                                >{{ suggestion }}</div>
                            {% endfor %}
                        </div>
                    </div>
                </form>
            </div>
            <div class="row">
                <div class="col-4">
                    <div>
                        <strong>Category</strong>
                        <ul id="categories">
                            {% for category in filters.categories %}
                                <li class="category" onclick="submit()">
                                    <input form="form" name="category[]" type="checkbox" value="{{ category.name }}" {% if category.name in app.request.get('category') %}checked{% endif %}/>
                                    <label>{{ category.name }} ({{ category.count }})</label>
                                </li>
                                <ul class="subcategories">
                                    {% for subcategory in category.children %}
                                        <li class="subcategory" onclick="submit()">
                                            <input form="form" name="subCategory[]"  type="checkbox" value="{{ subcategory.name }}" {% if subcategory.name in app.request.get('subCategory') %}checked{% endif %}/>
                                            <label>{{ subcategory.name }} ({{ subcategory.count }})</label>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endfor %}
                        </ul>
                    </div>
                    <div>
                        <strong>Editions</strong>
                        <ul id="editions">
                            {% for edition in filters.editions %}
                                <li class="edition" onclick="submit()">
                                    <input form="form" name="edition[]" type="checkbox" value="{{ edition.name }}" {% if edition.name in app.request.get('edition') %}checked{% endif %}/>
                                    <label>{{ edition.name }} ({{ edition.count }})</label>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="col-8">
                    {% block content %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </body>
</html>
